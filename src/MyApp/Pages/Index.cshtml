@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label for="Store.Name" asp-for="Store.Name" class="form-label">Store Name</label>
        <input type="text" asp-for="Store.Name" class="form-control" id="Store.Name" asp- aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="Store.Url" asp-for="Store.Url" class="form-label">Url</label>
        <input type="text" asp-for="Store.Url" class="form-control" id="Store.Url">
    </div>
    <div class="mb-3">
        <label for="Store.Theme" asp-for="Store.Theme" class="form-label">Theme</label>
        <input type="text" asp-for="Store.Theme" class="form-control" id="Store.Theme">
    </div>
    <div class="mb-3">
        <label for="Store.Online" asp-for="Store.Online" class="form-label">Online</label>
        <input type="checkbox" asp-for="Store.Online" value="true" id="Store.Online">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>